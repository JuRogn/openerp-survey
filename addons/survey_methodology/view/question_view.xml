<!-- survey_methodology.question -->
<!-- survey_methodology.question -->
<!-- survey_methodology.question -->
<openerp>
    <data>

        <!-- SEARCHVIEW -->
        <record id="view_survey_methodology_question_filter" model="ir.ui.view">
            <field name="name">survey_methodology.question.select</field>
            <field name="model">survey_methodology.question</field>
            <field name="arch" type="xml">
                <search string="Question" version="7.0">
                </search>
            </field>
        </record>

        <!-- FORMVIEW -->
        <record id="view_survey_methodology_question_form" model="ir.ui.view">
            <field name="name">survey_methodology.question.form</field>
            <field name="model">survey_methodology.question</field>
            <field name="arch" type="xml">
                <form string="Question" version="7.0">
                    <header>
                    </header>
                    <sheet string="Question">
                     <group>
                        <field name="code"
                            />
                        <field name="name"
                            />
                        <field name="description"
                            />
                        <field name="type"
                            />
                        <field name="validator_id"
                            />
                        <field name="caster_id"
                            />
                        <field name="variable_name"
                            />
                    <field name="survey_ids"
                            />
                    <field name="parent_id"
                            />
                    <field name="child_ids"
                            />
                    <field name="category_ids"
                            widget="many2many_tags"
                            />
                     </group>
                    </sheet>

                </form>
            </field>
        </record>

        <!-- TREEVIEW -->

        <record id="view_survey_methodology_question_tree" model="ir.ui.view">
            <field name="name">survey_methodology.question.tree</field>
            <field name="model">survey_methodology.question</field>
            <field name="arch" type="xml">
                <tree string="Question"
                    >
                    <field name="code"
                        />
                    <field name="name"
                        />
                    <field name="type"
                        />
                    <field name="parent_id"
                       />
                </tree>
            </field>
        </record>

        <record id="view_survey_methodology_question_tree_hier" model="ir.ui.view">
            <field name="name">survey_methodology.question.tree_hier</field>
            <field name="model">survey_methodology.question</field>
            <field name="field_parent">child_ids</field>
            <field name="arch" type="xml">
                <tree string="Question"
                    >
                    <field name="code"
                        />
                    <field name="name"
                        />
                    <field name="type"
                        />
                    <field name="parent_id"
                       />
                </tree>
            </field>
        </record>

    </data>
</openerp>
