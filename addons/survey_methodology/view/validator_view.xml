<!-- survey_methodology.validator -->
<!-- survey_methodology.validator -->
<!-- survey_methodology.validator -->
<openerp>
    <data>

        <!-- SEARCHVIEW -->
        <record id="view_survey_methodology_validator_filter" model="ir.ui.view">
            <field name="name">survey_methodology.validator.select</field>
            <field name="model">survey_methodology.validator</field>
            <field name="arch" type="xml">
                <search string="Validator" version="7.0">
                </search>
            </field>
        </record>

        <!-- FORMVIEW -->
        <record id="view_survey_methodology_validator_form" model="ir.ui.view">
            <field name="name">survey_methodology.validator.form</field>
            <field name="model">survey_methodology.validator</field>
            <field name="arch" type="xml">
                <form string="Validator" version="7.0">
                    <header>
                    </header>
                    <sheet string="Validator">
                     <group>
                        <field name="name"
                            />
                        <field name="code"
                            on_change="onchange_code(code, input_test_ids)"
                            />
                        <field name="code_error"
                            />
                        <field name="is_valid"
                            />
                    <field name="input_test_ids"
                            />
                     </group>
                    </sheet>

                </form>
            </field>
        </record>

        <!-- TREEVIEW -->

        <record id="view_survey_methodology_validator_tree" model="ir.ui.view">
            <field name="name">survey_methodology.validator.tree</field>
            <field name="model">survey_methodology.validator</field>
            <field name="arch" type="xml">
                <tree string="Validator"
                    >
                    <field name="name"
                        />
                    <field name="is_valid"
                        />
                </tree>
            </field>
        </record>

    </data>
</openerp>
