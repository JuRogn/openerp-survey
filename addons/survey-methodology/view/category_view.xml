<!-- survey.category -->
<openerp>
    <data>

        <!-- SEARCHVIEW -->
        <record id="view_survey_category_filter" model="ir.ui.view">
            <field name="name">survey.category.select</field>
            <field name="model">survey.category</field>
            <field name="arch" type="xml">
                <search string="category" version="7.0">
                </search>
            </field>
        </record>

        <!-- FORMVIEW -->
        <record id="view_survey_category_form" model="ir.ui.view">
            <field name="name">survey.category.form</field>
            <field name="model">survey.category</field>
            <field name="arch" type="xml">
                <form string="category" version="7.0">
                    <header>
                    </header>
                    <sheet string="category">
                     <group>
                        <field name="name"
                            />
                     </group>
                    </sheet>

                </form>
            </field>
        </record>

        <!-- TREEVIEW -->

        <record id="view_survey_category_tree" model="ir.ui.view">
            <field name="name">survey.category.tree</field>
            <field name="model">survey.category</field>
            <field name="arch" type="xml">
                <tree string="category"
                    >
                    <field name="name"
                        />
                </tree>
            </field>
        </record>

    </data>
</openerp>
