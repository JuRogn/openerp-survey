<!-- survey.question -->
<!-- survey.question -->
<!-- survey.question -->
<openerp>
    <data>

        <!-- SEARCHVIEW -->
        <record id="view_survey_question_filter" model="ir.ui.view">
            <field name="name">survey.question.select</field>
            <field name="model">survey.question</field>
            <field name="arch" type="xml">
                <search string="question" version="7.0">
                </search>
            </field>
        </record>

        <!-- FORMVIEW -->
        <record id="view_survey_question_form" model="ir.ui.view">
            <field name="name">survey.question.form</field>
            <field name="model">survey.question</field>
            <field name="arch" type="xml">
                <form string="question" version="7.0">
                    <header>
                    </header>
                    <sheet string="question">
                     <group>
                        <field name="code"
                            />
                        <field name="name"
                            />
                        <field name="description"
                            />
                        <field name="data_type"
                            on_change="onchange_type(type)"
                            />
                        <field name="size"
                            />
                        <field name="min"
                            />
                        <field name="max"
                            />
                        <field name="validation"
                            />
                    <field name="survey_ids"
                            />
                    <field name="parent_id"
                            />
                    <field name="child_ids"
                            />
                    <field name="category_ids"
                            widget="many2many_tags"
                            />
                    <field name="selection_options_ids"
                            />
                     </group>
                    </sheet>

                </form>
            </field>
        </record>

        <!-- TREEVIEW -->

        <record id="view_survey_question_tree" model="ir.ui.view">
            <field name="name">survey.question.tree</field>
            <field name="model">survey.question</field>
            <field name="arch" type="xml">
                <tree string="question"
                    >
                    <field name="code"
                        />
                    <field name="name"
                        />
                    <field name="description"
                        />
                    <field name="data_type"
                        />
                    <field name="parent_id"
                        />
                </tree>
            </field>
        </record>

    </data>
</openerp>
