<!-- survey.survey -->
<!-- survey.survey -->
<!-- survey.survey -->
<openerp>
    <data>
        <!-- Workflow -->

        <record id="survey_untitle_wkf" model="workflow">
            <field name="name">survey.survey.untitle</field>
            <field name="osv">survey.survey</field>
            <field name="on_create">True</field>
        </record>

        <!-- Activities -->

        <record id="a_119_193" model="workflow.activity">
            <field name="wkf_id" ref="survey_untitle_wkf"/>
            <field name="flow_start">True</field>
            <field name="name">Draft</field>
            <field name="action">write({'state':'draft'})</field>
            <field name="kind">function</field>
        </record>
        <record id="a_119_194" model="workflow.activity">
            <field name="wkf_id" ref="survey_untitle_wkf"/>
            <field name="name">Accepted</field>
            <field name="action">write({'state':'accepted'})</field>
            <field name="kind">function</field>
        </record>
        <record id="a_119_195" model="workflow.activity">
            <field name="wkf_id" ref="survey_untitle_wkf"/>
            <field name="name">Published</field>
            <field name="action">write({'state':'published'})</field>
            <field name="kind">function</field>
        </record>
        <record id="a_119_196" model="workflow.activity">
            <field name="wkf_id" ref="survey_untitle_wkf"/>
            <field name="name">Close</field>
            <field name="action">write({'state':'close'})</field>
            <field name="kind">function</field>
        </record>
        <record id="a_119_197" model="workflow.activity">
            <field name="wkf_id" ref="survey_untitle_wkf"/>
            <field name="flow_stop">True</field>
            <field name="name">Cancelled</field>
            <field name="action">write({'state':'cancelled'})</field>
            <field name="kind">function</field>
        </record>

        <!-- Transitions -->

        <record id="t_119_247" model="workflow.transition">
            <field name="act_from" ref="a_119_193"/>
            <field name="act_to" ref="a_119_194"/>
            <field name="signal">sgn_accept</field>
            <field name="condition">True</field>
        </record>
        <record id="t_119_248" model="workflow.transition">
            <field name="act_from" ref="a_119_194"/>
            <field name="act_to" ref="a_119_195"/>
            <field name="signal">sgn_publish</field>
            <field name="condition">True</field>
        </record>
        <record id="t_119_249" model="workflow.transition">
            <field name="act_from" ref="a_119_195"/>
            <field name="act_to" ref="a_119_196"/>
            <field name="signal">sgn_close</field>
            <field name="condition">True</field>
        </record>
        <record id="t_119_250" model="workflow.transition">
            <field name="act_from" ref="a_119_196"/>
            <field name="act_to" ref="a_119_197"/>
            <field name="signal">sgn_cancel</field>
            <field name="condition">True</field>
        </record>
        <record id="t_119_251" model="workflow.transition">
            <field name="act_from" ref="a_119_197"/>
            <field name="act_to" ref="a_119_193"/>
            <field name="signal">sgn_to_draft</field>
            <field name="condition">True</field>
        </record>
        <record id="t_119_252" model="workflow.transition">
            <field name="act_from" ref="a_119_194"/>
            <field name="act_to" ref="a_119_197"/>
            <field name="signal">sgn_cancel</field>
            <field name="condition">True</field>
        </record>
        <record id="t_119_253" model="workflow.transition">
            <field name="act_from" ref="a_119_195"/>
            <field name="act_to" ref="a_119_197"/>
            <field name="signal">sgn_cancel</field>
            <field name="condition">True</field>
        </record>
    </data>
</openerp>
