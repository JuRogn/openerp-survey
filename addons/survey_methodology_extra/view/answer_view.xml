<!-- survey_methodology.answer -->
<!-- survey_methodology.answer -->
<!-- survey_methodology.answer -->
<openerp>
    <data>

        <!-- SEARCH VIEW -->
        <record id="view_survey_methodology_answer_filter" model="ir.ui.view">
            <field name="name">survey_methodology.answer.select</field>
            <field name="model">survey_methodology.answer</field>
            <field name="arch" type="xml">
                <search string="Answer" version="7.0">
                    <group string="By Attribute">
                    </group>
                    <group string="By object">
                    <field name="respondent_code" string="Respondent Code"
                            />
                    </group>
                </search>
            </field>
        </record>

        <!-- FORMVIEW -->
        <record id="view_survey_methodology_answer_form" model="ir.ui.view">
            <field name="name">survey_methodology.answer.form</field>
            <field name="model">survey_methodology.answer</field>
            <field name="arch" type="xml">
                <form string="Answer" version="7.0">
                    <header>
                        <button name="sgn_disable"
                            states="enabled"
                            string="Disable"
                            />
                        <button name="action_wfk_set_enabled"
                            type="object"
                            states="disabled"
                            string="Enable"
                            />
                        <button name="sgn_close"
                            states="disabled"
                            string="Close"
                            />
                        <field name="state" widget="statusbar"
                            statusbar_colors='{}'
                            />
                    </header>
                    <sheet string="Answer">
                     <group>
                        <field name="name"
                            />
                        <field name="respondent_id"
                            />
                        <field name="pollster_id"
                            />
                        <field name="progress"
                            />
                        <field name="input"
                            />
                        <field name="input_as_integer"
                            />
                        <field name="input_as_char"
                            />
                        <field name="input_as_boolean"
                            />
                        <field name="input_as_float"
                            />
                        <field name="message"
                            />
                    <field name="question_id"
                            />
                    <field name="survey_id"
                            />
                    <field name="respondent_code"
                            />
                     </group>
                    </sheet>

                </form>
            </field>
        </record>

        <!-- TREEVIEW -->

        <record id="view_survey_methodology_answer_tree" model="ir.ui.view">
            <field name="name">survey_methodology.answer.tree</field>
            <field name="model">survey_methodology.answer</field>
            <field name="arch" type="xml">
                <tree string="Answer"
                    colors="grey:state=='cancelled';blue:state in ('enabled',);black:state in ('disabled',); red:state in ()"
                    >
                    <field name="respondent_code" />
                    <field name="name" />
                    <field name="input" />
                    <field name="message" />
                    <field name="state" readonly='True' invisible='1'/>
                </tree>
            </field>
        </record>

        <record id="survey_methodology.view_survey_methodology_answer_tree_edit" model="ir.ui.view">
            <field name="name">survey_methodology.answer.tree_edit</field>
            <field name="model">survey_methodology.answer</field>
            <field name="sequence">10</field>
            <field name="arch" type="xml">
                <tree string="Answer"
                    editable="bottom"
                    colors="grey:state=='cancelled';blue:state in ('enabled',);black:state in ('disabled',); red:state in ()"
                    >
                    <field name="respondent_code" />
                    <field name="name" />
                    <field name="input" attrs="{'readonly': [('state','!=','enabled')]}" on_change="onchange_input(input)"/>
                    <field name="message" />
                    <field name="state" readonly='True' invisible='1'/>
                </tree>
            </field>
        </record>

    </data>
</openerp>
